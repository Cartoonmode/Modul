@{
    ViewData["Title"] = "Ввод данных";
}
<style type="text/css">
    TABLE {
        width: 100%; /* Ширина таблицы */
        border: 1px solid #399; /* Граница вокруг таблицы */
        border-spacing: 7px 5px; /* Расстояние между границ */
    }

    TD {
        background: #fc0; /* Цвет фона */
        border: 1px solid #333; /* Граница вокруг ячеек */
        padding: 5px; /* Поля в ячейках */
    }
    
.knopka {
  color: #fff; /* цвет текста */
  text-decoration: none; /* убирать подчёркивание у ссылок */
  user-select: none; /* убирать выделение текста */
  background: rgb(212,75,56); /* фон кнопки */
  padding: .7em 1.5em; /* отступ от текста */
  outline: none; /* убирать контур в Mozilla */
} 
.knopka:hover { background: rgb(232,95,76); } /* при наведении курсора мышки */
.knopka:active { background: rgb(152,15,0); } /* при нажатии */
</style>
<h2 class="display-4">Входные параметры</h2>

<form>

    <header>
        <h1 align="center">Входные параметры</h1>
    </header>

    <table bgcolor="FFE57A" border="1" align="center" valign="bottom">
        <tr>
            <td bgcolor="#5FFDE8"><h3>Название праметра</h3></td>
            <td bgcolor="#5FFDE8"><h3>Значение</h3></td>
            <td bgcolor="#5FFDE8"><h3>Единица измерения</h3></td>
        </tr>
        <tr>
            <td>Начальная температура</td>
            <td><input type="number" min="0" max="1500" step="1" name="data.tmo" value="20" /></td>
            <td>°C</td>
        </tr>
        <tr>
            <td>Количество слитков</td>
            <td><input type="number" min="1" max="15" step="1" name="data.n" value="7" /></td>
            <td>шт</td>
        </tr>
        <tr>
            <td>Конечная температура</td>
            <td><input type="number" min="0" max="2500" step="1" name="data.tkon" value="1030" /></td>
            <td>°C</td>
        </tr>
        <tr>
            <td>Длина слитка</td>
            <td><input type="number" min="0.5" max="2" step="0.01" name="data.Lsl" value="1.43" /></td>
            <td>м</td>
        </tr>
        <tr>
            <td>диаметр слитка</td>
            <td><input type="number" min="0.1" max="1" step="0.01" name="data.Dsl" value="0.56" /></td>
            <td>м</td>
        </tr>
        <tr>
            <td>Масса одного слитка</td>
            <td><input type="number" min="1000" max="2000" step="1" name="data.g1" value="1583" /></td>
            <td>кг/шт</td>
        </tr>
        <tr>
            <td> Длина печи</td>
            <td><input type="number" min="4" max="6" step="0.01" name="data.Lpeh" value="5.87" /></td>
            <td>м</td>
        </tr>
        <tr>
            <td>диаметр печи</td>
            <td><input type="number" min="3" max="4" step="0.1" name="data.Dpeh" value="3.3" /></td>
            <td>м</td>
        </tr>
        <tr>
            <td>Высота печи</td>
            <td><input type="number" min="2" max="3" step="0.01" name="data.Hpeh" value="2.56" /></td>
            <td>м</td>
        </tr>
        <tr>
            <td>первое время нагрева</td>
            <td><input type="number" min="3.2" max="4" step="0.1" name="data.T1" value="3.7" /></td>
            <td>ч</td>
        </tr>
        <tr>
            <td>второе время нагрева</td>
            <td><input type="number" min="2.0" max="3" step="0.1" name="data.T2" value="2.3" /></td>
            <td>ч</td>
        </tr>
        <tr>
            <td>Степень черноты слитков</td>
            <td><input type="number" min="0.1" max="1" step="0.1" name="data.Em" value="0.3" /></td>
        </tr>
        <tr>
            <td>Степень черноты кладки</td>
            <td><input type="number" min="0.1" max="1" step="0.1" name="data.Ekl" value="0.8" /></td>
        </tr>
        <tr>
            <td>Угловой коэффициент с металла на металл</td>
            <td><input type="number" min="0.1" max="1" step="0.01" name="data.fm_m" value="0.24" /></td>
        </tr>
        <tr>
            <td>Эффективная температура печи</td>
            <td><input type="number" min="1000" max="1100" step="1" name="data.tef" value="1070.0" /></td>
            <td>°C</td>
        </tr>
        <tr>
            <td>КПД</td>
            <td><input type="number" min="0" max="1" step="0.1" name="data.ny" value="0.4" /></td>
        </tr>

        <tr>
            <td align="left"><button class="knopka" type="submit" formaction="/Home/Index">Начать с начала</button></td>
            <td align="right"></td>
            <td align="right"><button class="knopka" type="submit" formaction="/Home/Result">Расчитать</button></td>
        </tr>
    </table>
</form>

